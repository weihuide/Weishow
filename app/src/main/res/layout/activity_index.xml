<?xml version="1.0" encoding="utf-8"?>
<!-- 主页布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_tab01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_tab01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bottom_home_p_ic" />
            <TextView
                android:id="@+id/tv_tab01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/tab01_value"
                android:textColor="@color/T4"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_tab02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/iv_tab02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bottom_yy_d_ic" />

                <ImageView
                    android:id="@+id/iv_red_point"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="-5dp"
                    android:layout_toRightOf="@+id/iv_tab02"
                    android:src="@drawable/hongdian"
                    android:visibility="gone"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_tab02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/tab02_value"
                android:textColor="@color/T9"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_tab03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_tab03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bottom_my_d_ic" />

            <TextView
                android:id="@+id/tv_tab03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/tab03_value"
                android:textColor="@color/T9"
                android:textSize="11sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
